<scene>
  <camera>
    <vec name="pos" x="0" y="0" z="0"/>
    <vec name="dir" x="0" y="0" z="1"/>
    <vec name="up"  x="0" y="1" z="0"/>
  </camera>
  <shapes>
    <sphere r="0.5">
      <vec name="pos" x="-1" y="0.25" z="5"/>
<material type="simple" ambient="0.1" diffuse="1" specular="1" brilliancy="4">
        <color name="ambient" r="1" g="1" b="0"/>
        <color name="diffuse" r="1" g="1" b="0"/>
        <color name="specular" r="1" g="1" b="1"/>
        <brilliancy value="4"/>
      </material>
    </sphere>
    <sphere r="0.75">
      <vec name="pos" x="1" y="0" z="7"/>
<material type="simple" ambient="0.1" diffuse="1" specular="1" brilliancy="4">
        <color r="1" g="0" b="0"/>
      </material>
    </sphere>
    <sphere r="0.5">
      <vec name="pos" x="0" y="-1" z="7"/>
<material type="simple" ambient="0.1" diffuse="1" specular="1" brilliancy="4">
        <color r="0" g="1" b="0"/>
      </material>
    </sphere>
    <triangle>
      <vec name="pt1" x="1.7" y="0" z="6.7"/>
      <vec name="pt2" x="1"   y="0.75" z="4"/>
      <vec name="pt3" x="3" y="0.75" z="7"/>
      <material type="procedural" ambient="0.1" diffuse="1" specular="1" brilliancy="4" repeat="0">
          <color r="0.5" g="0.5" b="0"      when_x="0..1"  />
          <color r="1"   g="0.4"   b="1"    when_x="1..3" />
      </material>
    </triangle>
  </shapes>
  <lights>
    <light r="1" samples="100">
      <vec name="pos" x="-2.9" y="-2.9" z="9.9"/>
      <color r="1" g="1" b="1"/>
    </light>
    <light r="1" samples="100">
      <vec name="pos" x="-2.9" y="-2.9" z="0"/>
      <color r="1" g="1" b="1"/>
    </light>
    <light r="1" samples="100">
      <vec name="pos" x="2.9" y="-2.9" z="9.9"/>
      <color r="1" g="1" b="1"/>
    </light>
    <light r="1" samples="100">
      <vec name="pos" x="2.9" y="-2.9" z="0"/>
      <color r="1" g="1" b="1"/>
    </light>
  </lights>
</scene>
